<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_champion_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arondaniel.lolpickshelp.ChampionScreenActivity">



    <!--=================================================================-->
    <!-- A seguir o código do retrato do campeão                         -->
    <!--=================================================================-->


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:columnCount="2"
        android:rowCount="2">

        <ImageView
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:id="@+id/championPortrait"
            android:layout_gravity="top"
            android:background="@drawable/blue_champion_icon"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="2"
            tools:layout_gravity="center_vertical">
        </ImageView>


        <TextView
            android:id="@+id/championName"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="45px"
            android:textStyle="bold"
            android:text="   Champion"
            android:layout_gravity="top"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:id="@+id/championPhrase"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="35px"
            android:text="    Champion phrase"
            android:layout_gravity="top"
            android:layout_row="1"
            android:layout_column="1" />

    </GridLayout>


</RelativeLayout>
